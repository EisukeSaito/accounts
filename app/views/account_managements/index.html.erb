<h1>登録情報一覧</h1>

<table class="Account-Table">
  <thead>
    <tr>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>登録日時</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr onclick="location.href='<%= account_management_path(account.line_user_id) %>'">
        <td><%= account.name %></td>
        <td><%= account.email %></td>
        <td><%= account.phone %></td>
        <td><%= account.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
